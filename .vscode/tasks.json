{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "setup",
      "type": "process",
      "command": "meson",
      "args": ["setup", "${workspaceFolder}/builddir"],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
    },
    {
      "label": "build",
      "type": "process",
      "command": "meson",
      "args": ["compile", "-C", "${workspaceFolder}/builddir"],
      "group": "build",
      "isBuildCommand": true,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
  ]
}